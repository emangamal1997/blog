
<% include partials/header %>
<div class="ui main text container">
   	<div class="ui huge header">Blog Site</div>
    <div class="ui top attached segment">
<div class="ui divided items">
<% blog.forEach(function(blogs) { %>
<div class="item">
	    <div class="image">
	 <img src="<%= blogs.image %>">
	    </div>
	 <div class="content">
	      <a class="header"><%= blogs.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= blogs.created.toDateString() %></span>
	      </div>
	      <div class="description">
<p><%- blogs.body.substring(0, 100) %>...</p> 	      </div>
	      <div class="extra">
	        <a href="/blogs/<%= blogs._id %>" class="ui floated basic violet button">
	          Read More
	          <i class="right chevron icon"></i>
	        </a>
	      </div>
	    </div>
	  </div>
	<% }); %>
</div>
</div>
    
  </div>
<% include partials/footer %>